{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "outDir": "./build/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "ES2021",
    "jsx": "react",
    "allowJs": true,
    "declaration": true,
    "declarationDir": "./build/type-declarations",
    "emitDeclarationOnly": true,
    "rootDir": "./src",
    "baseUrl": "./src",
    "strict": true,
    "moduleResolution": "node",
    "checkJs": true
  },
  "include": ["src/**/*"]
}
