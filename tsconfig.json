{
  "compilerOptions": {
    "noEmit": true,
    "module": "es6",
    "target": "ES2021",
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "noImplicitAny": true,
    "checkJs": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/tests/**/*", "src/**/*.test.*"]
}
